
<div class="container px-5 px-sm-0">
  <div class="row">
      <%= render 'users/list', book: @book, user: current_user %>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <p><% @users.each do |user| %></p>
          <tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td><%= user.name %></td>
            <td><%= link_to "show", user_path(user) %></td>
            <p><% end %></p>
          </tr>
        </tbody>
      </table>
    </div>
  </div
</div>